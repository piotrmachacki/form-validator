<div class="mb-3">
    {{#each options as | option |}}
        <div>
            <input
                type="radio"
                {{#if ../id}}id="{{ ../id }}-{{@index}}"{{/if}}
                name="{{ ../name }}"
                {{#if ../required}}required{{/if}}
                {{#if ../autofocus}}autofocus{{/if}}
            >
            <label class="form-check-label" {{#if ../id}}for="{{ ../id }}-{{@index}}"{{/if}}>
                {{ option }}
            </label>
        </div>
    {{/each}}
</div>
